<div class="row">
  <div class="col-md-12 bgresults">
    <div class="container">
    <div class="row">
      <div class="col-md-12">
          <div class="row">
            <div class="col-md-4">
              <div class="thumbnail">
                <img src="<%= @meal.photo %>" />
                <h3>Detalles:</h3>
                <ul>
                  <li><i class="fa fa-book"></i> Categoria: <%= @meal.category %></li>
                  <li><i class="fa fa-clock-o"></i> Tiempo de preparaci√≥n: <%= @meal.time %></li>
                  <li><i class="fa fa-bars"></i> Dificultad: <%= @meal.difficulty %></li>
                  <li><i class="fa fa-user-plus"></i> Comensales: <%= @meal.serves %></li>
                </ul>
                <hr>
                <div class="row">
                  <div class="col-md-12">
                    <div class="btn-group btn-group-justified" role="group" aria-label="...">
                      <div class="btn-group" role="group">
                        <button type="button" class="btn btn-info"><i class="fa fa-star"></i>  Guardar</button>
                      </div>
                      <div class="btn-group" role="group">
                        <button type="button" class="btn btn-default"><i class="fa fa-share"></i> Compartir</button>
                      </div>
                      <div class="btn-group" role="group">
                        <button type="button"  class="btn btn-success"><i class="fa fa-print"></i> Imprimir</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="caption">
                  <h2><%= @meal.name %></h2>
                  <% @meal.description.split("\n").each do |d| %>
                    <li> <%= d %> </li>
                  <% end %>
                </div>
            </div>
          </div>
      </div><!--END class="col-md-6 col-offset-3"-->
    </div><!--END .row -->
    </div><!--END .container -->
  </div><!--END class="col-md-12 bgblack"-->
</div><!--END  class="row bgheader"-->
